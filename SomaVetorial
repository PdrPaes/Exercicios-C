#include <stdio.h>

int main()
{
    int v1;
    int v2;
    int s1;
    int s2;
    int soma;
    
    
    printf("informe o primeiro vetor: ");
    scanf("%d",&v1);
    printf("Informe o sentido do vetor: ");
    printf("\n-1 para sentido direita-esquerda");
    printf("\n 1 para sentido esquerda-direita\n");
    scanf("%d",&s1);
    
    printf("\ninforme o segundo vetor: ");
    scanf("%d",&v2);
    printf("Informe o sentido do vetor: ");
    printf("\n-1 para sentido direita-esquerda");
    printf("\n 1 para sentido esquerda-direita\n");
    scanf("%d",&s2);
    
    soma = v1*s1 + v2*s2;
    
    printf("\no valor da soma vetorial Ã©: %d",soma);
    
    return 0;
}
